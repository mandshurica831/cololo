<% layout('layouts/main') %>
<article class="views user__create">

  <h3>新規会員登録</h3>

  <section>
    <form action="/user/create" method="post" class="user_create-form">
      <div class="item">
        <span class="label">ユーザーID</span>
        <input type="text" name="user_id" class="input" required>
      </div>
      <div class="item">
        <span class="label">パスワード</span>
        <input type="password" name="password" class="input" required>
      </div>
      <div class="item">
        <span class="label">Eメール</span>
        <input type="email" name="email" class="input" required>
      </div>
      <div class="t_right">
        <button type="submit" class="submit btn-normal green">新規会員登録</button>
      </div>
    </form>
  </section>

  <section class="text t_right">
    <a href="/login">ログインページはこちら</a>
    <% if (typeof emailExists !== 'undefined') { %>
        <p class="error"><%= emailExists %></p>
    <% } %>
  </section>

</article>
